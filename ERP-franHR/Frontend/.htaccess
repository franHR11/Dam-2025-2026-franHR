<IfModule mod_rewrite.c>
    # Activa el motor de reescritura
    RewriteEngine On

    # Redirigir ra√≠z a login
    RewriteRule ^$ Login/login.php [L]

    # Redirigir login a Login/login.php
    RewriteRule ^login$ Login/login.php [L]

    # Redirigir escritorio a escritorio/escritorio.php
    RewriteRule ^escritorio$ escritorio/escritorio.php [L]

    # Permitir acceso directo a archivos existentes
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
</IfModule>
